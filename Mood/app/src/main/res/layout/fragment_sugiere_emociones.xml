<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Views.SugiereEmocionesFragment">


    <TextView
            android:text="@string/sugiere_actividad"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/layout_nombre_sugerencia" android:textSize="30sp"
            android:textStyle="bold" android:textAlignment="center"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/layout_nombre_sugerencia" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/textView2" app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/layout_descripcion_sugerencia">
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="always"
                android:background="@android:color/transparent"
                android:hint="@string/nombre_actividad"
                android:inputType="text" android:id="@+id/nombre_sugerencia"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_nombre_sugerencia"
            app:layout_constraintStart_toStartOf="@+id/layout_nombre_sugerencia"
            app:layout_constraintEnd_toEndOf="@+id/layout_nombre_sugerencia" android:id="@+id/layout_descripcion_sugerencia"
            app:layout_constraintBottom_toTopOf="@+id/guardar_sugerencia">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="always"
                android:background="@android:color/transparent"
                android:hint="@string/descripcion_actividad"
                android:inputType="textMultiLine"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:id="@+id/descripcion_sugerencia"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:text="@string/guardar"
            app:layout_constraintTop_toBottomOf="@id/layout_descripcion_sugerencia" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginStart="24dp" android:id="@+id/guardar_sugerencia"
            android:layout_marginBottom="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>