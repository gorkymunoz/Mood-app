<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/hora_registro_historial"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/actividad_registro_historial"
                app:layout_constraintEnd_toEndOf="@+id/actividad_registro_historial"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/actividad_registro_historial"
                app:layout_constraintTop_toBottomOf="@+id/hora_registro_historial"
                android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:textSize="24sp" android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/fecha_registro_historial"
        />
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/fecha_registro_historial"
                app:layout_constraintTop_toBottomOf="@+id/actividad_registro_historial" android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="@+id/actividad_registro_historial"
                app:layout_constraintEnd_toEndOf="@+id/actividad_registro_historial"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@+id/hora_registro_historial"
                app:layout_constraintBottom_toBottomOf="@+id/fecha_registro_historial"
                app:layout_constraintStart_toEndOf="@+id/actividad_registro_historial"
                android:layout_marginStart="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>